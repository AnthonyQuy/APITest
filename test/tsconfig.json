{
  "compilerOptions": {
    "baseUrl": "/",
    "declaration": true,
    "lib": ["es2015", "es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitThis": false,
    "outDir": "lib",
    "removeComments": false,
    "skipLibCheck": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "types": ["node"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "lib", "examples", "bin"]
}